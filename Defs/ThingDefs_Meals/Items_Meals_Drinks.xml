	<ThingDef ParentName="NukaColaBeverage">
		<defName>NukaCola</defName>
		<label>Nuka-Cola</label>
		<description>A popular drink common throughout the United States.</description>
		<graphicData>
			<texPath>Things/Item/Cola/NukaCola</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			 <drawSize>(0.4,0.4)</drawSize>
		</graphicData>
		
		<ingestible>
			<preferability>NeverForNutrition</preferability>
			<joy>0.17</joy>
			<nurseable>true</nurseable>
			<drugCategory>Social</drugCategory>
			<ingestSound>Ingest_Drink</ingestSound>
			<ingestHoldOffsetStanding>
				<northDefault>
					<offset>(0.18,0,0)</offset>
				</northDefault>
			</ingestHoldOffsetStanding>
			<ingestCommandString>Drink {0}</ingestCommandString>
			<ingestReportString>Drinking {0}.</ingestReportString>
			<tasteThought>HadNukaCola</tasteThought>
			<chairSearchRadius>25</chairSearchRadius>
			<joyKind>Gluttonous</joyKind>
			<outcomeDoers>
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>GoodNukaCola</hediffDef>
					<severity>0.25</severity>
				</li>
			</outcomeDoers>
		</ingestible>
	</ThingDef>



