<Defs>

	<HediffDef>
		<defName>StimpakBasic</defName>
		<label>Stimpak regeneration</label>  
		<description>Stimpak regeneration.</description>
		<labelNoun>Stimpak</labelNoun>
		<defaultLabelColor>(145,255,145)</defaultLabelColor>
		<initialSeverity>0.35</initialSeverity>
		<hediffClass>HediffWithComps</hediffClass>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-1.0</severityPerDay>
			</li>
		</comps>
		<stages>
		    <li>
        <minSeverity>0</minSeverity>
		<label>side effect</label>
        <statFactors>
		  <WorkSpeedGlobal>-0.8</WorkSpeedGlobal>
          <MoveSpeed>-0.5</MoveSpeed>
          <IncomingDamageFactor>0.2</IncomingDamageFactor>
        </statFactors>
		<capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.6</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.5</offset>
          </li>
		</capMods>
        </li>
			<li>
				<minSeverity>0.4</minSeverity>
				<label>regeneration</label>
				<statFactors>
					<IncomingDamageFactor>0.40</IncomingDamageFactor>
				</statFactors>
				<regeneration>150</regeneration>
				<capMods>
          			<li>
           				<capacity>Consciousness</capacity>
            			<setMax>0.75</setMax>
          			</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

