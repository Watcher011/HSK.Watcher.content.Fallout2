<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  
  <BiomeDef>
    <defName>NuclearWasteland</defName>
    <label>nuclear wasteland</label>
    <description>A land scorched by ancient fire, poisoned by radiation, and shrouded in a perpetual, sickly haze. The soil is dead, the water is toxic, and life has twisted into horrific forms. Survival here is a constant battle against decay, mutation, and the lingering hatred of the old world.</description>
    <workerClass>Watcher.BiomeDef.BiomeWorker_GlowingSea</workerClass>
    <animalDensity>1.2</animalDensity> <!-- Низкая плотность, но животные опасные -->
    <plantDensity>0.15</plantDensity> <!-- Очень низкая плотность растений -->
    <settlementSelectionWeight>0.3</settlementSelectionWeight> <!-- Очень низкий шанс для НПС -->
    <movementDifficulty>2.5</movementDifficulty> <!-- Высокая сложность передвижения из-за руин и зыбучей золы -->
    <texture>World/Biomes/GlowingSea</texture> <!-- Можно заменить на кастомную текстуру -->
    <forageability>0.3</forageability> <!-- Почти нечего собирать -->
    <foragedFood>RawBerries</foragedFood> <!-- Или кастомный "Гнилой фрукт" -->
    <wildPlantRegrowDays>45</wildPlantRegrowDays> <!-- Очень медленный рост -->
    <soundsAmbient>
      <li>Ambient_Wind_Desert</li> <!-- Унылый ветер -->
      <li>Ambient_Space_PlanetSurface</li> <!-- Эффект пустоты и изоляции -->
    </soundsAmbient>
    <diseaseMtbDays>25</diseaseMtbDays> <!-- Частые болезни, но не заразные, а токсичные/радиационные -->
    <diseases>
      <!-- Высокий шанс получить отравление от среды -->
      <li>
        <diseaseInc>Disease_Flu</diseaseInc> <!-- Используем как аналог "Токсического отравления" -->
        <commonality>120</commonality>
      </li>
      <li>
        <diseaseInc>Disease_Plague</diseaseInc> <!-- Используем как аналог "Радиационного поражения" -->
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_GutWorms</diseaseInc> <!-- Мутировавший штамм чумы -->
        <commonality>80</commonality>
      </li>
      <li>
        <diseaseInc>Disease_MuscleParasites</diseaseInc>
        <commonality>70</commonality>
      </li>
      <li>
        <diseaseInc>Disease_FibrousMechanites</diseaseInc>
        <commonality>20</commonality>
      </li>
      <li>
        <diseaseInc>Disease_SensoryMechanites</diseaseInc>
        <commonality>20</commonality>
      </li>
      <li>
        <diseaseInc>Disease_AnimalPlague</diseaseInc>
        <commonality>90</commonality>
      </li>
    </diseases>
    <terrainsByFertility>
      <!-- Преобладает бесплодная земля и песок -->
      <li>
        <terrain>Sand</terrain>
        <min>-999</min>
        <max>0.15</max>
      </li>
      <li>
        <terrain>Soil</terrain>
        <min>0.15</min>
        <max>0.30</max>
      </li>
      <li>
        <terrain>Gravel</terrain> <!-- Загрязненный гравий -->
        <min>0.30</min>
        <max>999</max>
      </li>
    </terrainsByFertility>
    <terrainPatchMakers>
      <!-- Патчи радиоактивной грязи и кислотных луж -->
      <li>
        <perlinFrequency>0.03</perlinFrequency>
        <thresholds>
          <li>
            <terrain>Mud</terrain> <!-- Используем как аналог "Радиоактивной жижи" -->
            <min>0.75</min>
            <max>999</max>
          </li>
        </thresholds>
      </li>
      <li>
        <perlinFrequency>0.04</perlinFrequency>
        <thresholds>
          <li>
            <terrain>WaterShallow</terrain> <!-- Используем как аналог "Кислотных луж" -->
            <min>0.8</min>
            <max>999</max>
          </li>
        </thresholds>
      </li>
    </terrainPatchMakers>
    <baseWeatherCommonalities>
      <!-- Погода мрачная и опасная -->
      <Clear>5</Clear> <!-- Редкие ясные дни -->
      <Fog>10</Fog> <!-- Частый токсичный туман -->
      <Rain>1</Rain> <!-- Дождь бывает редко -->
      <DryThunderstorm>0.5</DryThunderstorm>
      <RainyThunderstorm>0.5</RainyThunderstorm>
      <FoggyRain>3</FoggyRain> <!-- Кислотный дождь -->
      <!-- Радиационная буря (потребует кастомного погодного ивента) -->
      <!-- <RadiationStorm>2</RadiationStorm> -->
    </baseWeatherCommonalities>
    <wildPlants>
      <!-- Скудная, мутировавшая флора -->
      <Plant_Grass>0.5</Plant_Grass> <!-- Чахлая трава -->
      <Plant_TallGrass>0.2</Plant_TallGrass>
      <Plant_ShrubLow>0.3</Plant_ShrubLow> <!-- Колючий кустарник -->
      <!-- Кастомные растения можно добавить через моды -->
       <Plant_Mutfruit>0.1</Plant_Mutfruit> 
       <PlantTarberry>0.05</PlantTarberry> 
       <Plant_Tato>0.02</Plant_Tato> 
    </wildPlants>
    <wildAnimals>
      <!-- Обычные животные, но более агрессивные и редкие -->
      <Gecko_green>2</Gecko_green>
      <Gecko_fire>0.5</Gecko_fire> <!-- Мутировавшие ящерицы -->
      <Gecko_gold>0.3</Gecko_gold> <!-- Одичавшие псы -->
      <Mirelurk>0.2</Mirelurk> <!-- Смертоносные мутанты -->
      <RadDeer>0.4</RadDeer>
      <Deathclaw>0.1</Deathclaw>
      <MoleRat>0.3</MoleRat> <!-- Насекомые-мутанты -->
    </wildAnimals>
    <pollutionWildAnimals MayRequire="Ludeon.RimWorld.Biotech">
      <!-- В зонах загрязнения появляются настоящие ужасы -->
      <Gecko_green>2</Gecko_green>
      <Gecko_fire>0.5</Gecko_fire> <!-- Мутировавшие ящерицы -->
      <Gecko_gold>0.3</Gecko_gold> <!-- Одичавшие псы -->
      <Mirelurk>0.2</Mirelurk> <!-- Смертоносные мутанты -->
      <RadDeer>0.4</RadDeer>
	  <Firefly>0.4</Firefly>
      <Deathclaw>0.1</Deathclaw>
      <MoleRat>0.3</MoleRat>
      <Radroach>0.3</Radroach>
      <RadScorpion>0.3</RadScorpion>
      <Duten>0.3</Duten>	
    </pollutionWildAnimals>
  </BiomeDef>


</Defs>
